<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.saviosvm.showdomilhaomatemtico">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.saviosvm.showdomilhaomatemtico.view.Principal"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.saviosvm.showdomilhaomatemtico.view.Regra"
            android:parentActivityName="com.saviosvm.showdomilhaomatemtico.view.Principal"
            android:screenOrientation="landscape">

            <!-- Parent activity -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.saviosvm.showdomilhaomatemtico.view.Principal" />
        </activity>
        <activity
            android:name="com.saviosvm.showdomilhaomatemtico.view.Placar"
            android:parentActivityName="com.saviosvm.showdomilhaomatemtico.view.Principal"
            android:screenOrientation="landscape">

            <!-- Parent activity -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.saviosvm.showdomilhaomatemtico.view.Principal" />
        </activity>
        <activity
            android:name="com.saviosvm.showdomilhaomatemtico.view.Sobre"
            android:parentActivityName="com.saviosvm.showdomilhaomatemtico.view.Principal"
            android:screenOrientation="landscape">

            <!-- Parent activity -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.saviosvm.showdomilhaomatemtico.view.Principal" />
        </activity>
        <activity
            android:name="com.saviosvm.showdomilhaomatemtico.view.Jogo"
            android:screenOrientation="landscape"
            />
        <activity
            android:name="com.saviosvm.showdomilhaomatemtico.view.Nome"
            android:parentActivityName="com.saviosvm.showdomilhaomatemtico.view.Principal"
            android:screenOrientation="landscape">

            <!-- Parent activity -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.saviosvm.showdomilhaomatemtico.view.Principal" />
        </activity>
        <activity
            android:name="com.saviosvm.showdomilhaomatemtico.view.Cartas"
            android:screenOrientation="landscape"
            android:parentActivityName="com.saviosvm.showdomilhaomatemtico.view.Jogo">
            <!-- Parent activity -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.saviosvm.showdomilhaomatemtico.view.Jogo" />
        </activity>
    </application>

</manifest>